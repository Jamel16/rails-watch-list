<div class="container">
  <h1><%= @list.name %></h1><br >
    <ul>
      <% @list.bookmarks.each do |bookmark| %>
        <li><%= bookmark.movie.title %><br ><%= bookmark.comment %><%= link_to "Delete", bookmark_path(bookmark),  data: {turbo_method: :delete, confirm: "Are you sure?" } %>

      <% end %>
    </ul>

  <%= link_to "Back to lists", lists_path %>
  <%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>
</div>

<div class="container">
<h2>Add a list</h2>
  <%= simple_form_for @list do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name, style: 'text-transform: capitalize;' %>
    </div>

    <div>
      <%= form.submit "Create List" %>
    </div>
  <% end %>

  <%= link_to "Back to lists", lists_path %>
</div>
